<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemMe.Views.RemFileDetailPage">
    <StackLayout BackgroundColor="Yellow" HorizontalOptions="Fill" VerticalOptions="Center">
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Title">
                    <EntryCell Label="Title" Text="{Binding Path=RemFile.Title}" />
                </TableSection>
                <TableSection Title="Description">
                    <EntryCell Label="Description" Text="{Binding Path=RemFile.Description}" />
                </TableSection>
                <TableSection>
                    <ViewCell>
                        <Button Text="Save" Command="{Binding SaveCommand}" />
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>