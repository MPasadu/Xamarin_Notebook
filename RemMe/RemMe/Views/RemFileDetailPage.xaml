<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemMe.Views.RemFileDetailPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Vertical">
        <Label Text="Title" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center"/>
        <Entry BackgroundColor="WhiteSmoke" Text="{Binding Path=RemFile.Title}" HorizontalOptions="FillAndExpand" VerticalOptions="Start"/>
        <Label Text="Description" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center"/>
        <Editor BackgroundColor="WhiteSmoke" Text="{Binding Path=RemFile.Description}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>